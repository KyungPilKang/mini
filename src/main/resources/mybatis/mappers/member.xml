<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mulcam.mini.dao.MemberDAO">
	<select id="queryMember" resultType="Member" parameterType="String">
		<![CDATA[
			select * from member where id=#{id}
		]]>
	</select>
	<insert id="insertMember" parameterType="Member">
		<![CDATA[
			insert into member values(#{id},#{password},#{name},#{email},#{phone},#{type})
		]]>
	</insert>
	<select id="queryMemberByEmail" resultType="Member" parameterType="String">
		<![CDATA[
			select * from member where email=#{email}
		]]>
	</select>
</mapper>